<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:background="@color/music_view_default_background" android:padding="@dimen/MusicView_full_padding" android:layout_width="wrap_content" android:layout_height="wrap_content">
