<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/rounded_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <ImageView android:id="@+id/dialog_rating_icon" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/dialog_rating_title" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/dialog_rating_icon" android:layout_centerHorizontal="true"/>
        <RatingBar android:id="@+id/dialog_rating_rating_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:numStars="5" android:stepSize="1" android:layout_below="@+id/dialog_rating_title" android:layout_centerHorizontal="true" android:scaleX="0.7" android:scaleY="0.7"/>
        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/dialog_rating_feedback_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/dialog_rating_rating_bar"/>
        <EditText android:textColorHint="@color/grey_400" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/dialog_rating_feedback" android:background="@drawable/edittext_background" android:padding="10dp" android:visibility="gone" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:maxLines="10" android:lines="8" android:minLines="6" android:layout_below="@+id/dialog_rating_feedback_title" android:inputType="none|text|textCapSentences|textMultiLine"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/dialog_rating_feedback_buttons" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/dialog_rating_feedback">
            <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/dialog_rating_button_feedback_cancel" android:padding="15dp" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1"/>
            <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/dialog_rating_button_feedback_submit" android:padding="15dp" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/dialog_rating_buttons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/dialog_rating_rating_bar">
            <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/dialog_rating_button_negative" android:background="?attr/selectableItemBackground" android:padding="15dp" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/dialog_rating_button_positive" android:background="?attr/selectableItemBackground" android:padding="15dp" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
