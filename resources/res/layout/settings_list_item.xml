<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:background="@color/black_opacity_70" android:layout_width="wrap_content" android:layout_height="@dimen/mcv2_settings_height">
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/mcv2_settings_height">
        <ImageView android:id="@+id/icon" android:layout_width="@dimen/mcv2_settings_icon_size" android:layout_height="@dimen/mcv2_settings_icon_size" android:layout_margin="8dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/mcv2_settings_main_text_size" android:textColor="@color/white" android:id="@+id/main_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="2dp"/>
            <TextView android:textSize="@dimen/mcv2_settings_sub_text_size" android:textColor="@color/white_opacity_70" android:id="@+id/sub_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
